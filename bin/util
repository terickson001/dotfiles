#! /usr/bin/env bash

update() {
    echo "Updating utils..."
    cd $HOME/.utils/
    while read -r line
    do
        [[ $line = "" ]] && continue
        if [[ $line =~ \[.*\] ]]; then
            mode=$(sed "s/\[\(.*\)\]/\1/" <<< $line)
            continue
        fi
        src=$line

        if [[ $mode = "github" ]]; then
            [[ -d ${line#*/} ]] && continue;
            git clone https://github.com/$src
        elif [[ $mode = "git" ]]; then
            [[ -d ${line#*/} ]] && continue;
            git clone $src
        else
            echo "Sources for '$mode' are not yet implemented"
            continue
        fi

        echo
    done < "./SOURCES"
    echo "Done."
}

get_dict() {
    dest=${1:-dict}
    cp $HOME/.utils/english-words/words.txt $dest
}

get_gb() {
    dest=${1:-gb}
    cp -r $HOME/.utils/gb $dest
}

op=$1; shift

$op ${args[@]}
